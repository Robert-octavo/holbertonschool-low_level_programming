#make -f 100-Makefile
#https://www.gnu.org/software/make/manual/html_node/Phony-Targets.html
# test with PHONY Built-in Target Name

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all : m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean :
	$(RM) *~ $(NAME)

oclean : 
	$(RM) $(OBJ)

fclean : clean oclean

re : oclean all
